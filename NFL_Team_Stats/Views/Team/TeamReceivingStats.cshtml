@model Root
<div class="text-center">
    <h1 style="font-weight: bold; font-size: 75px;" class="display-4">@ViewData["tName"] @ViewData["year"]</h1>
    <p style="font-size: 35px;">Choose a team statistic to view</p>
</div>
@{
    string namePassing = ViewData["tName"].ToString();
    string yearWanted = ViewData["year"].ToString();
}
<div style="background-image: url('http://content.firstcoastnews.com/photo/2014/11/26/635526151715073402-USATSI-8225687-157441246-lowres_1422778_ver1.0.jpg'); background-size: cover; background-repeat: no-repeat;">
    <form asp-controller="Team" asp-action="TeamWinsLosses" asp-route-team="@namePassing" asp-route-year="@yearWanted">
        <input type="submit" value="Wins/Losses" class="btn btn-primary" />
    </form>
    <br />
    <p></p>
    <p></p>
    <p></p>
    <br />
    <form asp-controller="TeamPassing" asp-action="TeamStatsPassingWindow" asp-route-team="@namePassing" asp-route-year="@yearWanted">
        <input type="submit" value="Passing" class="btn btn-primary" />
    </form>
    <br />
    <p></p>
    <p></p>
    <p></p>
    <br />
    <form asp-controller="Team" asp-action="TeamRushingStats" asp-route-team="@namePassing" asp-route-year="@yearWanted">
        <input type="submit" value="Rushing" class="btn btn-primary" />
    </form>
    <br />
    <p></p>
    <p></p>
    <p></p>
    <br />
    <form asp-controller="Team" asp-action="TeamReceivingStats">
        <input type="text" value="Receiving" class="btn btn-primary" />
    </form>
    <br />
    <p style="font-size: 25px; border: 3px solid black; background-color: white; display: inline-block;">Receptions: @Model._embedded.teamReceivingStatsList[(int)ViewData["index"]].receives</p>
    <p style="font-size: 25px; border: 3px solid black; background-color: white; display: inline-block;">Yards: @Model._embedded.teamReceivingStatsList[(int)ViewData["index"]].yards</p>
    <p style="font-size: 25px; border: 3px solid black; background-color: white; display: inline-block;">Touchdowns: @Model._embedded.teamReceivingStatsList[(int)ViewData["index"]].touchdowns</p>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
</div>