@model Root
<div class="text-center">
    <h1 style="font-weight: bold; font-size: 75px;" class="display-4">@ViewData["tName"] @ViewData["year"]</h1>
<p style="font-size: 35px;">Choose a team statistic to view</p>
</div>
@{
    string namePassing = ViewData["tName"].ToString();
    string yearWanted = ViewData["year"].ToString();
}
<div style="background-image: url('https://cdnph.upi.com/ph/st/th/7871612893938/2021/upi/59db91566dad1b7f6d59a1f30e7d07ea/v1.5/Rob-Gronkowski-still-hasnt-touched-Lombardi-Trophy-after-2019-mishap.jpg?lg=5&=1'); background-size: cover; background-repeat: no-repeat;">
    <form asp-controller="Team" asp-action="TeamWinsLosses">
        <input type="text" value="Wins/Losses" class="btn btn-primary" />
    </form>
    <br />
    <p style="font-size: 25px; border: 3px solid black; background-color: white; display: inline-block;">Wins: @Model._embedded.teamWinStatsList[(int)ViewData["index"]].wins</p>
    <p style="font-size: 25px; border: 3px solid black; background-color: white; display: inline-block;">Losses: @Model._embedded.teamWinStatsList[(int)ViewData["index"]].losses</p>
    <p style="font-size: 25px; border: 3px solid black; background-color: white; display: inline-block;">Win Percentage: @Model._embedded.teamWinStatsList[(int)ViewData["index"]].winRatePercentage</p>
    <br />
    <form asp-controller="TeamPassing" asp-action="TeamStatsPassingWindow" asp-route-team="@namePassing" asp-route-year="@yearWanted">
        <input type="submit" value="Passing" class="btn btn-primary" />
    </form>
    <br />
    <p></p>
    <p></p>
    <p></p>
    <br />
    <form asp-controller="Team" asp-action="TeamRushingStats" asp-route-team="@namePassing" asp-route-year="@yearWanted">
        <input type="submit" value="Rushing" class="btn btn-primary" />
    </form>
    <br />
    <p></p>
    <p></p>
    <p></p>
    <br />
    <form asp-controller="Team" asp-action="TeamReceivingStats" asp-route-team="@namePassing" asp-route-year="@yearWanted">
        <input type="submit" value="Receiving" class="btn btn-primary" />
    </form>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
</div>
