
@using Microsoft.AspNetCore.Mvc;
@using Newtonsoft.Json;
@using NFL_Team_Stats.Models;

@model RootPassing
@{
    string teamWinLossName = ViewData["tName"].ToString();
    string yearWanted = ViewData["year"].ToString();
}
<div class="text-center">
    <h1 style="font-weight: bold; font-size: 75px;" class="display-4">@ViewData["tName"] @ViewData["year"]</h1>
    <p style="font-size: 35px;">Choose a team statistic to view</p>
</div>
<div style="background-image: url('https://ftw.usatoday.com/wp-content/uploads/sites/90/2023/01/Screen-Shot-2023-01-23-at-10.45.44-AM.jpg?w=640'); background-size: cover; background-repeat: no-repeat;">
    <form asp-controller="Team" asp-action="TeamWinsLosses" asp-route-team="@teamWinLossName" asp-route-year="@yearWanted">
        <input type="submit" value="Wins/Losses" class="btn btn-primary" />
    </form>
    <br />
    <p> </p>
    <p> </p>
    <p></p>
    <br />
    <form asp-controller="TeamPassing" asp-action="TeamStatsPassingWindow">
        <input type="text" value="Passing" class="btn btn-primary" />
    </form>
    <br />
    <p style="font-size: 25px; border: 3px solid black; background-color: white; display: inline-block;">Passing Yards: @Model._embedded.teamPassingStatsList[(int)ViewData["index"]].passYards</p>
    <p style="font-size: 25px; border: 3px solid black; background-color: white; display: inline-block;">Completions: @Model._embedded.teamPassingStatsList[(int)ViewData["index"]].completions</p>
    <p style="font-size: 25px; border: 3px solid black; background-color: white; display: inline-block;">Touchdowns: @Model._embedded.teamPassingStatsList[(int)ViewData["index"]].touchdowns</p>
    <br />
    <form asp-controller="Team" asp-action="TeamRushingStats" asp-route-team="@teamWinLossName" asp-route-year="@yearWanted">
        <input type="submit" value="Rushing" class="btn btn-primary" />
    </form>
    <br />
    <p></p>
    <p></p>
    <p></p>
    <br />
    <form asp-controller="Team" asp-action="TeamReceivingStats" asp-route-team="@teamWinLossName" asp-route-year="@yearWanted">
        <input type="submit" value="Receiving" class="btn btn-primary" />
    </form>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
</div>
